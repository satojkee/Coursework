@model List<ApartmentTypeModel>

@{
    Layout = "~/Views/Shared/_ContainerDefault.cshtml";
    ViewData["Title"] = "Поверхи";
}

<table class="table table-sm">
    <thead>
        <tr>
            <th>Поверх</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var type in Model)
            {
                <tr>
                    <td>@type.Name</td>
                    <td>
                        <a class="text-warning" href="/Type/Edit/@type.Id">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                    </td>
                    <td>
                        <a class="text-danger" href="/Type/Delete/@type.Id">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<div class="d-flex justify-content-end">
    <a class="btn btn-primary" href="/Type/Create">
        <i class="bi bi-plus-square"></i>
    </a>
</div>