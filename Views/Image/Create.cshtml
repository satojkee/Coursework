@model ApartmentImageModel;

@{
    Layout = "~/Views/Shared/_ContainerDefault.cshtml";
}

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="ApartmentId" value="@ViewBag.ApartmentId" hidden>
    <div class="form-group mb-3">
        <label asp-for="Url" class="control-label">Посилання</label>
        <input asp-for="Url" class="form-control" />
        <span asp-validation-for="Url" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <input type="submit" value="Додати" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
