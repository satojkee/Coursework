@using Hotel.ViewModels
@model ApartmentViewModel

@{
	Layout = "~/Views/Shared/_ContainerDefault.cshtml";
	ViewData["Title"] = $"Номер {Model.Type}";
}

@section Style {
	<link rel="stylesheet" href="~/css/carousel.css" asp-append-version="true">
}

<div class="row gy-2 p-0 m-0">
	<div class="row p-0 m-0">
        <div id="carousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
				@{
					foreach (var image in Model.Images)
					{
						if (Model.Images.IndexOf(image) == 0)
						{
							<div class="carousel-item active">
								<img class="d-block w-100" src="@image.Url">
							</div>
						}
						else
						{
							<div class="carousel-item">
								<img class="d-block w-100" src="@image.Url">
							</div>
						}
					}
				}
            </div>
			<button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Previous</span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Next</span>
			</button>
        </div>
	</div>
	<div class="row p-0 m-0 my-4">
		<div class="d-flex justify-content-end mb-4">
			<a class="btn btn-sm btn-outline-primary" href="/Apartment/Order/@Model.Id">
				<i class="bi bi-arrow-up-right-square"></i>
				Забронювати
			</a>
		</div>
		<h1>@Model.Title</h1>
	</div>
	<div class="row p-0 mx-0 mt-4">
		<div class="col-sm-12 col-md-12 col-lg-4 col-xl-4 col-xxl-4">
			<h3 class="fw-light">Опис номера</h3>
		</div>
		<div class="col-sm-12 col-md-12 col-lg-8 col-xl-8 col-xxl-8">
			<hr class="mb-4">
			<div class="row row-cols-auto">
				<div class="col text-center me-3">
					<i class="bi bi-arrows-fullscreen fs-1"></i>
					<p class="fs-6">Площа @Model.Area м<sup>2</sup></p>
				</div>
				@{
					if (Model.HasConditioner)
					{
						<div class="col text-center me-3">
							<i class="bi bi-fan fs-1"></i>
							<p class="fs-6">
								<span>Кондиціонер</span>
							</p>
						</div>
					}
				}
				<div class="col text-center me-3">
					<i class="bi bi-wifi fs-1"></i>
					<p class="fs-6">WiFi у номері</p>
				</div>
			</div>
			<div class="row mt-2">
				<div class="text-dark text-opacity-75 lh-base">
					@Model.Description
				</div>
			</div>
		</div>
	</div>
	<div class="row p-0 mx-0 mt-4">
		<div class="col-sm-12 col-md-12 col-lg-4 col-xl-4 col-xxl-4">
			<h3 class="fw-light">Характеристика</h3>
		</div>
		<div class="col-sm-12 col-md-12 col-lg-8 col-xl-8 col-xxl-8 table-responsive">
			<hr class="mb-4">
			<table class="table table-sm">
				<tr>
					<th>Назва</th>
					<td>@Model.Title</td>
				</tr>
				<tr>
					<th>Класс</th>
					<td class="text-primary">@Model.Type</td>
				</tr>
				<tr>
					<th>Ціна за одну ніч</th>
					<td>@Model.Price грн</td>
				</tr>
				<tr>
					<th>Площа</th>
					<td>@Model.Area м<sup>2</sup></td>
				</tr>
				<tr>
					<th>Наявність кондиціонеру</th>
					@{
						if (Model.HasConditioner)
						{
							<td><i class="bi bi-check2 text-success"></i></td>
						} else
						{
							<td><i class="bi bi-x-lg text-danger"></i></td>
						}
					}
				</tr>
				<tr>
					<th>К-сть кімнат</th>
					<td>@Model.RoomsCount</td>
				</tr>
				<tr>
					<th>Поверх</th>
					<td>@Model.Floor</td>
				</tr>
				<tr>
					<th>Номер апартаментів</th>
					<td>@Model.RealId</td>
				</tr>
			</table>
		</div>
	</div>
</div>
